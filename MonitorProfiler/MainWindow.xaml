<Window x:Class="MonitorProfiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorProfiler"
        mc:Ignorable="d"
        Title="MonitorConfig" Height="359" Width="310" ResizeMode="NoResize" HorizontalAlignment="Left" VerticalAlignment="Top" Icon="Images/icon.png" Closing="Window_Closing">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <ComboBox x:Name="cboMonitors" Style="{StaticResource ComboBoxFlatStyle}" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="139" Height="40" SelectionChanged="CboMonitors_SelectionChanged" BorderBrush="Black" BorderThickness="0" Padding="10,3,5,3" FontSize="14"/>
        <Button x:Name="btnLinkMonitors" HorizontalAlignment="Left" Margin="154,10,0,0" VerticalAlignment="Top" Width="40" Height="40" Click="btnLinkMonitors_Click" Tag="unlink">
            <Image x:Name="unlink_png" Height="20" Source="images/unlink.png" Stretch="Fill" Width="20"/>
        </Button>
        <Button x:Name="btnIdentifyMonitor" HorizontalAlignment="Left" Margin="199,10,0,0" VerticalAlignment="Top" Width="40" Height="40" Background="#FFDDDDDD" Click="btnIdentifyMonitor_Click">
            <Image x:Name="light_png" Height="20" Source="images/light.png" Stretch="Fill" Width="20"/>
        </Button>
        <Button x:Name="btnRestart" HorizontalAlignment="Left" Margin="244,10,0,0" VerticalAlignment="Top" Width="40" Height="40" Click="btnRestart_Click">
            <Image x:Name="refresh_png" Height="20" Source="images/refresh.png" Stretch="Fill" Width="20"/>
        </Button>
        <Slider x:Name="barBrightness" HorizontalAlignment="Left" Margin="50,60,0,0" VerticalAlignment="Top" Width="200" ValueChanged="TrackBar_ValueChanged" Maximum="100" LargeChange="5" SmallChange="1" TickFrequency="5" AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True"/>
        <Slider x:Name="barContrast" HorizontalAlignment="Left" Margin="50,90,0,0" VerticalAlignment="Top" Width="200" ValueChanged="TrackBar_ValueChanged" LargeChange="5" Maximum="100" SmallChange="1" TickFrequency="5" AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True"/>
        <Slider x:Name="barRedGain" HorizontalAlignment="Left" Margin="50,120,0,0" VerticalAlignment="Top" Width="200" ValueChanged="TrackBar_ValueChanged" SmallChange="1" TickFrequency="5" LargeChange="5" Maximum="100" AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True"/>
        <Slider x:Name="barGreenGain" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top" Width="200" ValueChanged="TrackBar_ValueChanged" Maximum="100" LargeChange="5" SmallChange="1" TickFrequency="5" AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True"/>
        <Slider x:Name="barBlueGain" HorizontalAlignment="Left" Margin="50,180,0,0" VerticalAlignment="Top" Width="200" ValueChanged="TrackBar_ValueChanged" AutoToolTipPlacement="TopLeft" LargeChange="5" Maximum="100" SmallChange="1" TickFrequency="5" IsSnapToTickEnabled="True"/>
        <Slider x:Name="barSharpness" HorizontalAlignment="Left" Margin="50,210,0,0" VerticalAlignment="Top" Width="200" ValueChanged="TrackBar_ValueChanged" AutoToolTipPlacement="TopLeft" Maximum="5" SmallChange="1" IsSnapToTickEnabled="True"/>
        <Slider x:Name="barVolume" HorizontalAlignment="Left" Margin="50,240,0,0" VerticalAlignment="Top" Width="200" ValueChanged="TrackBar_ValueChanged" Maximum="100" LargeChange="5" SmallChange="1" TickFrequency="5" AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True"/>
        <Image x:Name="brightness_png" Margin="12,55,0,0" Source="images/brightness.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Height="28"/>
        <Image x:Name="contrast_png" Margin="12,85,0,0" Source="images/contrast.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Height="28"/>
        <Image x:Name="rgbred_png" Margin="12,115,0,0" Source="images/rgbred.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Height="28"/>
        <Image x:Name="rgbgreen_png" Margin="12,145,0,0" Source="images/rgbgreen.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Height="28"/>
        <Image x:Name="rgbblue_png" Margin="12,175,0,0" Source="images/rgbblue.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Height="28"/>
        <Image x:Name="sharpness_png" Margin="12,205,0,0" Source="images/sharpness.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Height="28"/>
        <Image x:Name="picVolume" Margin="12,235,0,0" Source="images/speaker_mute.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Height="28" MouseLeftButtonDown="picVolume_Click"/>
        <Button x:Name="btnProfiles" HorizontalAlignment="Left" Margin="10,268,0,-20" Width="42" Click="btnProfiles_Click" ContextMenuService.IsEnabled="false" Height="42" VerticalAlignment="Top">
            <Image x:Name="profiles_png" Height="24" Source="images/profiles.png" Width="19"/>
            <Button.ContextMenu>
                <ContextMenu>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <Button x:Name="btnPower" HorizontalAlignment="Left" Margin="57,268,0,-20" VerticalAlignment="Top" Width="42" Height="42" Click="btnPower_Click" ContextMenuService.IsEnabled="false">
            <Image x:Name="power_png" Height="20" Source="images/power.png" Stretch="Fill" Width="20"/>
            <Button.ContextMenu>
                <ContextMenu>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <Button x:Name="btnSources" HorizontalAlignment="Left" Margin="104,268,0,-20" Width="42" Click="btnSources_Click" ContextMenuService.IsEnabled="false" Height="42" VerticalAlignment="Top">
            <Image x:Name="split_png" Height="17" Source="images/split.png" Stretch="Fill" Width="17"/>
            <Button.ContextMenu>
                <ContextMenu>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <Button x:Name="btnFactoryReset" HorizontalAlignment="Left" Margin="151,268,0,-20" VerticalAlignment="Top" Width="42" Height="42" Click="btnFactoryReset_Click" ContextMenuService.IsEnabled="false">
            <Image x:Name="undo_png" Height="20" Source="images/undo.png" Stretch="Fill" Width="20"/>
            <Button.ContextMenu>
                <ContextMenu>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <Button x:Name="btnRevert" Content="Revert" HorizontalAlignment="Left" Margin="209,268,0,-20" VerticalAlignment="Top" Width="75" Height="42" Click="btnRevert_Click"/>
        <Label x:Name="lblBrightness" Content="0%" HorizontalAlignment="Left" Margin="248,56,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblContrast" Content="0%" HorizontalAlignment="Left" Margin="248,86,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblRedGain" Content="0%" HorizontalAlignment="Left" Margin="248,116,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblGreenGain" Content="0%" HorizontalAlignment="Left" Margin="248,146,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblBlueGain" Content="0%" HorizontalAlignment="Left" Margin="248,176,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblSharpness" Content="0" HorizontalAlignment="Left" Margin="248,206,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblVolume" Content="0%" HorizontalAlignment="Left" Margin="248,236,0,0" VerticalAlignment="Top"/>
        <Image x:Name="link_png" Source="images/link.png" Stretch="Fill" Width="26" Height="26" Visibility="Hidden"/>
        <Image x:Name="speaker_low_png" Source="images/speaker_low.png" Stretch="Fill" Width="28" Height="28" Visibility="Hidden"/>
        <Image x:Name="speaker_high_png" Source="images/speaker_high.png" Stretch="Fill" Width="28" Height="28" Visibility="Hidden"/>
    </Grid>
</Window>
